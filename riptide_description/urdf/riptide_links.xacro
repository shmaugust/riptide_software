    </collision>

    <buoyancy>
      <compensation>1.4</compensation>
      <origin xyz= "${pneumatics_com}"/>
      <limit radius=".25"/>
      <damping xyz="0 0 0" rpy="0 0 0"/>
    </buoyancy>
  </link>

  <link name="port_battery_link">
